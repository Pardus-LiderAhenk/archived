<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
                 http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                 http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://svn.apache.org/repos/asf/aries/trunk/blueprint/blueprint-cm/src/main/resources/org/apache/aries/blueprint/compendium/cm/blueprint-cm-1.1.0.xsd
         ">

	<cm:property-placeholder persistent-id="tr.org.liderahenk.backup"
		update-strategy="reload">
	</cm:property-placeholder>

	<!-- IPluginInfo implementation is used to register plugin -->
	<service ref="pluginInfoImpl"
		interface="tr.org.liderahenk.lider.core.api.plugin.IPluginInfo" />
	<bean id="pluginInfoImpl" class="tr.org.liderahenk.backup.plugininfo.PluginInfoImpl"
		init-method="refresh">
		<property name="pluginName" value="${plugin.name}" />
		<property name="pluginVersion" value="${plugin.version}" />
		<property name="description" value="${plugin.description}" />
		<property name="machineOriented" value="${plugin.machine.oriented}" />
		<property name="userOriented" value="${plugin.user.oriented}" />
		<property name="policyPlugin" value="${plugin.policy.plugin}" />
		<property name="taskPlugin" value="${plugin.task.plugin}" />
		<property name="usesFileTransfer" value="${plugin.uses.file.transfer}" />
		<property name="xbased" value="${plugin.x.based}" />
	</bean>

	<service ref="backupCommand" interface="tr.org.liderahenk.lider.core.api.plugin.ICommand" />
	<bean id="backupCommand" class="tr.org.liderahenk.backup.commands.BackupCommand">
		<property name="pluginInfo" ref="pluginInfoImpl" />
		<property name="resultFactory" ref="resultFactory" />
	</bean>

	<service ref="restoreCommand" interface="tr.org.liderahenk.lider.core.api.plugin.ICommand" />
	<bean id="restoreCommand" class="tr.org.liderahenk.backup.commands.RestoreCommand">
		<property name="pluginInfo" ref="pluginInfoImpl" />
		<property name="resultFactory" ref="resultFactory" />
	</bean>

	<service ref="getBackupServerConfigCommand" interface="tr.org.liderahenk.lider.core.api.plugin.ICommand" />
	<bean id="getBackupServerConfigCommand" class="tr.org.liderahenk.backup.commands.GetBackupServerConfigCommand">
		<property name="pluginInfo" ref="pluginInfoImpl" />
		<property name="resultFactory" ref="resultFactory" />
		<property name="dbService" ref="dbService" />
	</bean>

	<service ref="saveBackupServerConfigCommand" interface="tr.org.liderahenk.lider.core.api.plugin.ICommand" />
	<bean id="saveBackupServerConfigCommand" class="tr.org.liderahenk.backup.commands.SaveBackupServerConfigCommand">
		<property name="pluginInfo" ref="pluginInfoImpl" />
		<property name="resultFactory" ref="resultFactory" />
		<property name="dbService" ref="dbService" />
	</bean>

	<service ref="listBackupServerDirCommand" interface="tr.org.liderahenk.lider.core.api.plugin.ICommand" />
	<bean id="listBackupServerDirCommand" class="tr.org.liderahenk.backup.commands.ListBackupServerDirCommand">
		<property name="pluginInfo" ref="pluginInfoImpl" />
		<property name="resultFactory" ref="resultFactory" />
		<property name="dbService" ref="dbService" />
	</bean>

	<service ref="backupWithMonitoringCommand" interface="tr.org.liderahenk.lider.core.api.plugin.ICommand" />
	<bean id="backupWithMonitoringCommand"
		class="tr.org.liderahenk.backup.commands.BackupWithMonitoringCommand">
		<property name="pluginInfo" ref="pluginInfoImpl" />
		<property name="resultFactory" ref="resultFactory" />
	</bean>

	<reference id="resultFactory"
		interface="tr.org.liderahenk.lider.core.api.service.ICommandResultFactory" />
	<reference id="dbService"
		interface="tr.org.liderahenk.lider.core.api.persistence.IPluginDbService" />
</blueprint>
